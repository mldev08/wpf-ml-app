<Window x:Class="progress.PredictionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Предсказание"
        Height="135"
        Width="325">
    
    <Grid>
        <Button x:Name="SelectFileButton"
                Content="Выбрать файл"
                Width="120"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="180,60,0,0"
                Click="SelectFileButton_Click"/>

        <TextBox x:Name="SelectedFileTextBox"
                 IsReadOnly="True"
                 Width="300"
                 Height="30"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="10,10,0,0"/>

        <Button x:Name="RunPredictionButton"
                Content="Сделать предсказание"
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,60,0,0"
                Click="PredictButton_Click"/>
    </Grid>
    
</Window>
